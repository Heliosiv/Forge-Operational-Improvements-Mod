            {{/if}}
            {{#if hasNote}}
            <div class="po-op-summary">Notes: {{note}}</div>
            {{/if}}
            <div class="po-op-summary">Logged by {{createdBy}}</div>
            <div class="po-op-action-row">
              <button type="button" class="po-btn po-btn-sm" data-action="edit-global-log" data-log-type="{{logType}}" data-log-id="{{sourceId}}">Edit</button>
              <button type="button" class="po-btn po-btn-sm" data-action="remove-global-log" data-log-type="{{logType}}" data-log-id="{{sourceId}}">Remove</button>
            </div>
          </div>
          {{/each}}
          {{else}}
          <div class="po-op-summary">No global logs yet.</div>
          {{/if}}
          <div class="po-op-action-row">
            <button type="button" class="po-btn po-btn-sm" data-action="show-gm-logs-manager">Manage Logs</button>
          </div>
          {{/if}}
        </div>

        <div class="po-gm-section po-party-health-manager">
          <div class="po-section-title">GM Party Modifier Manager</div>
          <div class="po-hint">Enable/disable derived modifiers and add custom DAE changes that sync to all player actors.</div>
          <label class="po-switch">
            <input type="checkbox" data-action="set-party-health-sync-non-party" {{#if operations.partyHealth.syncToSceneNonParty}}checked{{/if}} />
            <span>Also sync global/weather modifiers to non-party scene actors</span>
          </label>
          {{#if gmOpsTabDerived}}
          <div class="po-op-divider"></div>
          <div class="po-section-title">Derived Modifiers</div>
          {{#each operations.summary.effects.derivedModifierRows}}
          <div class="po-op-role-row">
            <div class="po-op-role-head">
              <div class="po-op-role-name">{{label}}</div>
              <div class="po-op-role-status">{{formatted}} · {{appliesTo}}</div>
            </div>
            <label class="po-switch">
              <input type="checkbox" data-action="set-party-health-modifier" data-modifier-id="{{modifierId}}" {{#if enabled}}checked{{/if}} />
              <span>Enabled</span>
            </label>
            {{#if note}}<div class="po-op-summary">Note: {{note}}</div>{{/if}}
          </div>
          {{/each}}
          {{/if}}

          {{#if gmOpsTabCustom}}
          <div class="po-op-divider"></div>
          <div class="po-section-title">Custom Global Modifiers (DAE Simple)</div>
          <div class="po-hint">Set key, mode, and value. Example: key `system.attributes.init.bonus`, mode `ADD`, value `1`.</div>
          {{#if operations.partyHealth.customModifiers.length}}
          {{#each operations.partyHealth.customModifiers}}
          <div class="po-op-role-row">
            <label class="po-resource-row">
              <span>Label</span>
              <input type="text" class="po-input" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="label" value="{{label}}" />
            </label>
            <label class="po-resource-row">
              <span>Key</span>
              <input type="text" list="po-party-mod-key-options" class="po-input" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="key" value="{{key}}" />
            </label>
            <label class="po-resource-row">
              <span>Key Presets</span>
              <select class="po-select" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="key">
                <option value="">Select key preset</option>
                {{#each keyOptions}}
                <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}} — {{value}}</option>
                {{/each}}
              </select>
            </label>
            {{#if keyHint}}<div class="po-op-summary">Key Hint: {{keyHint}}</div>{{/if}}
            <label class="po-resource-row">
              <span>Mode</span>
              <select class="po-select" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="mode">
                {{#each modeOptions}}
                <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                {{/each}}
              </select>
            </label>
            <label class="po-resource-row">
              <span>Value</span>
              <input type="text" class="po-input" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="value" value="{{value}}" />
            </label>
            <label class="po-resource-row po-notes-row-lg">
              <span>Notes / Why this applies</span>
              <textarea class="po-input" rows="4" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="note">{{note}}</textarea>
            </label>
            <label class="po-switch">
              <input type="checkbox" data-action="set-party-health-custom-field" data-modifier-id="{{id}}" data-field="enabled" {{#if enabled}}checked{{/if}} />
              <span>Enabled</span>
            </label>
            <button type="button" class="po-btn po-btn-sm is-danger" data-action="remove-party-health-custom" data-modifier-id="{{id}}">Remove</button>
          </div>
          {{/each}}
          {{else}}
          <div class="po-op-summary">No custom global modifiers yet.</div>
          {{/if}}
          {{/if}}

          {{#if gmOpsTabActiveSync}}
          <div class="po-op-divider"></div>
          <div class="po-section-title">Active Synced Effects</div>
          <nav class="po-tabs po-tabs-sub" role="tablist" aria-label="Active Sync Effects">
            <button type="button" class="po-tab {{#if operations.partyHealth.activeSyncEffectsTabActive}}is-active{{/if}}" data-action="set-active-sync-effects-tab" data-tab="active">Active ({{operations.partyHealth.activeSyncEffectsCount}})</button>
            <button type="button" class="po-tab {{#if operations.partyHealth.activeSyncEffectsTabArchived}}is-active{{/if}}" data-action="set-active-sync-effects-tab" data-tab="archived">Archived ({{operations.partyHealth.archivedSyncEffectsCount}})</button>
          </nav>

          {{#if operations.partyHealth.activeSyncEffectsTabActive}}
            {{#if operations.partyHealth.hasActiveSyncEffects}}
            {{#each operations.partyHealth.activeSyncEffects}}
            <div class="po-op-role-row">
              <div class="po-op-role-head">
                <div class="po-op-role-name">{{actorName}}</div>
                <div class="po-op-role-status">{{effectName}}</div>
              </div>
              <div class="po-op-action-row">
                <button type="button" class="po-btn po-btn-sm" data-action="archive-active-sync-effect" data-actor-id="{{actorId}}" data-effect-id="{{effectId}}">Archive</button>
                <button type="button" class="po-btn po-btn-sm is-danger" data-action="remove-active-sync-effect" data-actor-id="{{actorId}}" data-effect-id="{{effectId}}">Remove</button>
              </div>
            </div>
            {{/each}}
            {{else}}
            <div class="po-op-summary">No active synced global effects currently on tracked actors.</div>
            {{/if}}
          {{/if}}

          {{#if operations.partyHealth.activeSyncEffectsTabArchived}}
            {{#if operations.partyHealth.hasArchivedSyncEffects}}
            {{#each operations.partyHealth.archivedSyncEffects}}
            <div class="po-op-role-row">
              <div class="po-op-role-head">
                <div class="po-op-role-name">{{label}}</div>
                <div class="po-op-role-status">{{actorName}}</div>
              </div>
              <div class="po-op-summary">Original Effect: {{effectName}}</div>
              <div class="po-op-summary">Archived: {{archivedAtLabel}} by {{archivedBy}}</div>
              <label class="po-resource-row">
                <span>Archive Label</span>
                <input type="text" class="po-input" data-action="set-archived-sync-field" data-archive-id="{{id}}" data-field="label" value="{{label}}" />
              </label>
              <label class="po-resource-row po-notes-row-lg">
                <span>Archive Notes</span>
                <textarea class="po-input" rows="3" data-action="set-archived-sync-field" data-archive-id="{{id}}" data-field="note">{{note}}</textarea>
              </label>
              <div class="po-op-action-row">
                <button type="button" class="po-btn po-btn-sm" data-action="restore-archived-sync-effect" data-archive-id="{{id}}">Restore</button>
                <button type="button" class="po-btn po-btn-sm is-danger" data-action="remove-archived-sync-effect" data-archive-id="{{id}}">Remove Permanently</button>
              </div>
            </div>
            {{/each}}
            {{else}}
            <div class="po-op-summary">No archived synced effects.</div>
            {{/if}}
          {{/if}}
          {{/if}}

          {{#if gmOpsTabCustom}}
          <div class="po-op-role-row">
            <div class="po-op-role-head"><div class="po-op-role-name">Add Custom Modifier</div></div>
            <label class="po-resource-row">
              <span>Label</span>
              <input type="text" name="customModifierLabel" class="po-input" placeholder="e.g. War Drums Morale" />
            </label>
            <label class="po-resource-row">
              <span>Key</span>
              <input type="text" list="po-party-mod-key-options" name="customModifierKey" class="po-input" placeholder="system.attributes.init.bonus" />
            </label>
            <label class="po-resource-row">
              <span>Key Presets</span>
              <select name="customModifierKeySelect" class="po-select">
                <option value="">Select key preset</option>
                {{#each operations.partyHealth.modifierKeyOptions}}
                <option value="{{value}}">{{label}} — {{value}}</option>
                {{/each}}
              </select>
            </label>
            <label class="po-resource-row">
              <span>Mode</span>
              <select name="customModifierMode" class="po-select">
                {{#each operations.partyHealth.modifierModeOptions}}
                <option value="{{value}}">{{label}}</option>
                {{/each}}
              </select>
            </label>
            <label class="po-resource-row">
              <span>Value</span>
              <input type="text" name="customModifierValue" class="po-input" placeholder="1" />
            </label>
            <label class="po-resource-row po-notes-row-lg">
              <span>Notes</span>
              <textarea name="customModifierNote" class="po-input" rows="4" placeholder="What this change represents and when it applies"></textarea>
            </label>
            <button type="button" class="po-btn" data-action="add-party-health-custom">Add Custom Modifier</button>
          </div>
          <datalist id="po-party-mod-key-options">
            {{#each operations.partyHealth.modifierKeyOptions}}
            <option value="{{value}}" label="{{label}}"></option>
            {{/each}}
          </datalist>
          {{#unless operations.partyHealth.daeAvailable}}
          <div class="po-op-summary is-warn">DAE module not active. Modifiers still sync as standard Active Effects.</div>
          {{/unless}}
          {{/if}}
        </div>
        {{/if}}
        {{/if}}

        {{/if}}
      </aside>
    </div>
  </section>
  </div>

  <footer class="po-footer">
    <div class="po-footer-text">Party Operations</div>
    <div class="po-footer-text">State synchronized per party</div>
  </footer>
</div>
