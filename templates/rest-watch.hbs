<div class="po-window po-window-rest" data-tool="rest-watch" data-main-tab="{{mainTab}}" role="region" aria-label="Party Operations Rest Watch">
  <header class="po-header">
    <div class="po-header-main">
      <h1 class="po-title">Party Operations</h1>
      <div class="po-subtitle" aria-live="polite">Rest Watch - Last updated {{lastUpdatedAt}} by {{lastUpdatedBy}}</div>
    </div>
    <div class="po-context-pill" aria-hidden="true">Rest Watch</div>
    <div class="po-controls">
      <button type="button" class="po-icon-btn" data-action="refresh" aria-label="Refresh">
        <i class="fa-solid fa-rotate"></i>
      </button>
      {{#if showPopout}}
      <button type="button" class="po-icon-btn" data-action="popout" aria-label="Pop out">
        <i class="fa-solid fa-up-right-from-square"></i>
      </button>
      {{/if}}
    </div>
  </header>

  {{#if lockBannerText}}
  <div class="po-lock-banner {{lockBannerClass}}" title="{{lockBannerTooltip}}">{{lockBannerText}}</div>
  {{/if}}

  <div class="po-body">

  <nav class="po-tabs po-tabs-main" role="navigation" aria-label="Party Operations views">
    <button type="button" class="po-tab {{#if mainTabRestWatch}}is-active{{/if}}" data-tab="rest-watch" aria-current="{{#if mainTabRestWatch}}page{{else}}false{{/if}}">Rest Watch</button>
    <button type="button" class="po-tab" data-tab="marching-order" aria-current="false">Marching Order</button>
    <button type="button" class="po-tab {{#if mainTabOperations}}is-active{{/if}}" data-tab="operations" aria-current="{{#if mainTabOperations}}page{{else}}false{{/if}}">Operations</button>
  </nav>

  {{#if mainTabRestWatch}}
  <section class="po-overview" aria-label="Rest watch status">
    <article class="po-overview-card">
      <span>Slots Filled</span>
      <strong>{{overview.occupiedSlots}} / {{overview.totalSlots}}</strong>
    </article>
    <article class="po-overview-card">
      <span>Assigned Entries</span>
      <strong>{{overview.assignedEntries}}</strong>
    </article>
    <article class="po-overview-card {{#if overview.hasLowDarkvisionCoverage}}is-alert{{/if}}">
      <span>Low Darkvision Slots</span>
      <strong>{{overview.lowDarkvisionSlots}}</strong>
    </article>
    <article class="po-overview-card">
      <span>Lock Status</span>
      <strong>{{overview.lockState}}</strong>
    </article>
    <article class="po-overview-card">
      <span>Campfire</span>
      <strong>{{overview.campfireState}}</strong>
    </article>
  </section>

  {{#if playerCharacters}}
  <div class="po-character-selector">
    <div class="po-selector-label">Switch Character</div>
    <div class="po-character-buttons">
      {{#each playerCharacters}}
      <button type="button" class="po-char-btn {{#if isActive}}is-active{{/if}}" data-action="switch-character" data-actor-id="{{id}}" title="Switch to {{name}}">
        <img src="{{img}}" alt="{{name}}" />
        <span class="po-char-name">{{name}}</span>
      </button>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <section class="po-campfire-section">
    <div class="po-campfire-header">
      <div class="po-light-info">
        {{#if isGM}}
        <button type="button" class="po-campfire-toggle {{#if campfire}}is-active{{/if}}" data-action="toggle-campfire" title="Toggle campfire" aria-label="Toggle campfire on or off">
          <i class="fa-solid fa-fire"></i>
        </button>
        {{else}}
        <div class="po-campfire-status {{#if campfire}}is-active{{/if}}" title="{{#if campfire}}Campfire is active{{else}}No campfire{{/if}}">
          <i class="fa-solid fa-fire"></i>
        </div>
        {{/if}}
        {{#if light}}
        <div class="po-visibility-info">
          {{#if light.brightDistance}}
          <div class="po-visibility-range">
            <span class="po-light-icon"><i class="fa-solid fa-sun"></i></span>
            <span class="po-range-label">Bright:</span>
            <span class="po-range-value">{{light.brightDistance}} ft</span>
          </div>
          <div class="po-visibility-range">
            <span class="po-light-icon"><i class="fa-solid fa-moon"></i></span>
            <span class="po-range-label">Dim:</span>
            <span class="po-range-value">{{light.dimDistance}} ft</span>
          </div>
          {{else}}
          <div class="po-no-light">No light sources</div>
          {{/if}}
        </div>
        {{/if}}
      </div>
    </div>
  </section>

  {{/if}}

  <section class="po-content" id="{{#if mainTabRestWatch}}po-panel-rest-watch{{else}}po-panel-operations{{/if}}">
    <div class="po-grid {{#if mainTabOperations}}is-operations-layout{{/if}}">
      {{#if mainTabRestWatch}}
      <div class="po-cards">
        {{#each slots}}
        <article class="po-card" data-slot-id="{{id}}">
          <div class="po-card-left">
            <div class="po-slot-badge">
              {{label}}
              {{#if entries}}<span class="po-entry-count">{{entries.length}}</span>{{/if}}
            </div>
            {{#if isGM}}
            <label class="po-sr-only" for="po-time-range-{{id}}">Time range for {{label}}</label>
            <input id="po-time-range-{{id}}" type="text" class="po-time-range-input" data-action="time-range" data-slot-id="{{id}}" value="{{timeRange}}" placeholder="e.g., 8-10 PM" aria-label="Time range for {{label}}" />
            {{else}}
            {{#if timeRange}}
            <div class="po-time-range">{{timeRange}}</div>
            {{/if}}
            {{/if}}
            {{#if isGM}}
            <div class="po-slot-insights">
              {{#if slotHighestPP}}
              <div class="po-slot-chip">PP {{slotHighestPP}}</div>
              {{/if}}
              {{#if slotNoDarkvision}}
              <div class="po-slot-chip is-warn">No DV</div>
              {{/if}}
            </div>
            {{/if}}
          </div>

          <div class="po-card-center">
            {{#if hasEntries}}
            {{#each entries}}
            <div class="po-watch-entry {{#if isActiveCharacter}}is-active{{/if}}" data-actor-id="{{actorId}}">
              <div class="po-actor">
                <img class="po-portrait" src="{{actor.img}}" alt="{{actor.name}}" />
                <div class="po-actor-meta">
                  <div class="po-actor-name">
                    {{actor.name}}
                    <button type="button" class="po-icon-btn" data-action="ping" aria-label="Ping token">
                      <i class="fa-solid fa-location-dot"></i>
                    </button>
                  </div>
                  <div class="po-actor-sub">
                    <div class="po-watch-stats">
                      {{#if actor.passivePerception}}
                      <div class="po-stat po-stat-primary">
                        <span class="po-stat-label">PP</span>
                        <span class="po-stat-value">{{actor.passivePerception}}</span>
                      </div>
                      {{/if}}
                      {{#if ../isGM}}
                      {{#if actor.ac}}
                      <div class="po-stat">
                        <span class="po-stat-label">AC</span>
                        <span class="po-stat-value">{{actor.ac}}</span>
                      </div>
                      {{/if}}
                      {{#if actor.darkvision}}
                      <div class="po-stat">
                        <span class="po-stat-label">DV</span>
                        <span class="po-stat-value">{{actor.darkvision}}</span>
                      </div>
                      {{/if}}
                      {{#if actor.passiveInsight}}
                      <div class="po-stat">
                        <span class="po-stat-label">PI</span>
                        <span class="po-stat-value">{{actor.passiveInsight}}</span>
                      </div>
                      {{/if}}
                      {{#if actor.passiveInvestigation}}
                      <div class="po-stat">
                        <span class="po-stat-label">PIv</span>
                        <span class="po-stat-value">{{actor.passiveInvestigation}}</span>
                      </div>
                      {{/if}}
                      {{#if actor.stealthDisadv}}
                      <div class="po-stat po-stat-warn">Stealth Disadv</div>
                      {{/if}}
                      {{#if actor.languages}}
                      <div class="po-stat">
                        <span class="po-stat-label">Lang</span>
                        <span class="po-stat-value">{{actor.languages}}</span>
                      </div>
                      {{/if}}
                      {{/if}}
                    </div>
                  </div>
                </div>
              </div>

              {{#if activity}}
              <div class="po-activity-section">
                <div class="po-activity-row is-compact">
                  <div class="po-exhaustion-badge {{#if activity.exhaustion}}is-exhausted{{/if}}" title="Exhaustion Level {{activity.exhaustion}}: {{activity.exhaustionLabel}}" aria-label="Exhaustion {{activity.exhaustion}} - {{activity.exhaustionLabel}}">
                    {{#if activity.exhaustion}}
                    <i class="fa-solid fa-heart-crack"></i>
                    <span>{{activity.exhaustion}}</span>
                    {{else}}
                    <i class="fa-solid fa-heart"></i>
                    {{/if}}
                  </div>

                  <label class="po-sr-only" for="po-rest-activity-{{../id}}-{{actorId}}">Activity for {{actor.name}}</label>
                  <select id="po-rest-activity-{{../id}}-{{actorId}}" class="po-activity-select" data-action="set-activity" data-actor-id="{{actorId}}" aria-label="Activity for {{actor.name}}">
                    {{#each activity.activityOptions}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
                    {{/each}}
                  </select>

                  {{#if ../isGM}}
                  <div class="po-exhaustion-controls" data-exhaustion="{{activity.exhaustion}}">
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="0" title="No exhaustion">0</button>
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="1" title="Disadvantage">1</button>
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="2" title="Half speed">2</button>
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="3" title="No actions">3</button>
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="4" title="1 action only">4</button>
                    <button type="button" class="po-exh-btn" data-action="set-exhaustion" data-actor-id="{{actorId}}" data-level="5" title="Unconscious">5</button>
                  </div>
                  {{/if}}
                </div>
              </div>
              {{/if}}

              <div class="po-entry-actions">
                <button type="button" class="po-icon-btn" data-action="toggle-notes" aria-controls="po-notes-{{../id}}-{{actorId}}" aria-expanded="{{#if notes}}true{{else}}false{{/if}}" aria-label="Toggle notes for {{actor.name}}">
                  <i class="fa-solid fa-note-sticky"></i>
                </button>
                {{#if canClear}}
                <button type="button" class="po-icon-btn" data-action="clear" aria-label="Clear">
                  <i class="fa-solid fa-xmark"></i>
                </button>
                {{/if}}
              </div>

              <div id="po-notes-{{../id}}-{{actorId}}" class="po-notes {{#if notes}}is-active{{/if}}" aria-hidden="{{#if notes}}false{{else}}true{{/if}}">
                <label class="po-sr-only" for="po-note-input-{{../id}}-{{actorId}}">Notes for {{actor.name}}</label>
                <textarea id="po-note-input-{{../id}}-{{actorId}}" class="po-notes-input" rows="2" placeholder="Notes" aria-label="Notes for {{actor.name}}" {{#unless canEditNotes}}disabled{{/unless}}>{{notes}}</textarea>
              </div>
            </div>
            {{/each}}
            {{/if}}

            {{#unless hasEntries}}
            <div class="po-empty">
              <div class="po-empty-text">Assign character(s)...</div>
            </div>
            {{/unless}}

            <div class="po-assign-actions">
              {{#if canAssign}}
              <button type="button" class="po-btn" data-action="assign">+ Add Character</button>
              {{/if}}
              {{#if canAssignMe}}
              <button type="button" class="po-btn is-primary" data-action="assign-me">+ Assign Me</button>
              {{/if}}
            </div>
          </div>

          <div class="po-card-right">
            <button type="button" class="po-icon-btn" data-action="swap" aria-label="Swap">
              <i class="fa-solid fa-grip-lines"></i>
            </button>
          </div>
        </article>
        {{/each}}
      </div>
      {{/if}}

      <aside class="po-gm-panel {{#if mainTabOperations}}is-operations-full{{/if}}">
        {{#if gmPanelTabCore}}
        <div class="po-gm-section">
          <button type="button" class="po-btn" data-action="open-for-players"><i class="fa-solid fa-share-from-square"></i> Share with Players</button>
        </div>

        <div class="po-gm-section">
          <label class="po-switch">
            <input type="checkbox" data-action="toggle-lock" {{#if locked}}checked{{/if}} />
            <span>Lock Plan</span>
          </label>
        </div>

        <div class="po-gm-section">
          <div class="po-section-title">Auto-Fill</div>
          <button type="button" class="po-btn" data-action="autofill-party"><i class="fa-solid fa-users"></i> Fill from Active Party</button>
          <button type="button" class="po-btn" data-action="autofill-last"><i class="fa-solid fa-clock-rotate-left"></i> Fill from Last Session</button>
        </div>

        <div class="po-gm-section">
          <div class="po-section-title">Snapshot</div>
          <button type="button" class="po-btn" data-action="commit-plan"><i class="fa-solid fa-floppy-disk"></i> Save Snapshot</button>
        </div>

        <div class="po-gm-section">
          <div class="po-section-title">Activities</div>
          <button type="button" class="po-btn" data-action="reset-activities"><i class="fa-solid fa-arrows-rotate"></i> Reset Day</button>
        </div>

        <div class="po-gm-section">
          <div class="po-section-title">Visibility</div>
          <select class="po-select" data-action="visibility">
            {{#each visibilityOptions}}
            <option value="{{value}}" {{#if selected}}selected{{/if}}>{{label}}</option>
            {{/each}}
          </select>
        </div>

        <div class="po-gm-section">
          <div class="po-section-title">Export</div>
          <button type="button" class="po-btn" data-action="copy-text"><i class="fa-solid fa-copy"></i> Copy Text</button>
          <button type="button" class="po-btn" data-action="copy-md"><i class="fa-brands fa-markdown"></i> Copy Markdown</button>
        </div>

        <div class="po-gm-section">
          <button type="button" class="po-btn is-danger" data-action="clear-all"><i class="fa-solid fa-trash"></i> Clear Plan</button>
        </div>
        {{/if}}

        {{#if gmPanelTabOperations}}

        <nav class="po-tabs po-tabs-ops" role="tablist" aria-label="Operations Pages">
          <button type="button" class="po-tab {{#if operationsPagePlanning}}is-active{{/if}}" data-action="operations-page" data-page="planning" title="Plan leadership, SOPs, resources, and Party Health modifiers">Planning</button>
          <button type="button" class="po-tab {{#if operationsPageReadiness}}is-active{{/if}}" data-action="operations-page" data-page="readiness" title="Review risk tier, readiness level, and current edges">Readiness</button>
          <button type="button" class="po-tab {{#if operationsPageComms}}is-active{{/if}}" data-action="operations-page" data-page="comms" title="Configure communication discipline and emergency signaling">Comms</button>
          <button type="button" class="po-tab {{#if operationsPageReputation}}is-active{{/if}}" data-action="operations-page" data-page="reputation" title="Track faction standing and access levels">Reputation</button>
          <button type="button" class="po-tab {{#if operationsPageBase}}is-active{{/if}}" data-action="operations-page" data-page="base" title="Manage safehouses, pressure, and operational sites">Base</button>
          <button type="button" class="po-tab {{#if operationsPageDowntime}}is-active{{/if}}" data-action="operations-page" data-page="downtime" title="Track player downtime actions and GM-resolved outcomes">Downtime</button>
          <button type="button" class="po-tab {{#if operationsPageRecovery}}is-active{{/if}}" data-action="operations-page" data-page="recovery" title="Track injuries, stabilization, and recovery cycles">Recovery</button>
          {{#if @root.isGM}}
          <button type="button" class="po-tab {{#if operationsPageGm}}is-active{{/if}}" data-action="operations-page" data-page="gm" title="GM-only environment controls and logs">GM</button>
          {{/if}}
        </nav>

        <div class="po-gm-section po-gm-section-compact">
          <div class="po-info-strip">
            <div class="po-info-chip" title="Overall operational risk from role coverage, SOP activation, and base pressure"><span>Risk</span><strong>{{operations.summary.effects.riskTier}}</strong></div>
            <div class="po-info-chip" title="Assigned leadership roles out of total available roles"><span>Roles</span><strong>{{operations.summary.roleCoverage}} / {{operations.summary.roleTotal}}</strong></div>
            <div class="po-info-chip" title="Active SOPs currently briefed and in use"><span>SOPs</span><strong>{{operations.summary.activeSops}} / {{operations.summary.sopTotal}}</strong></div>
            <div class="po-info-chip" title="Estimated number of long-rest cycles before food is depleted"><span>Food Cycles</span><strong>{{operations.resources.summary.foodCyclesLeft}}</strong></div>
            <div class="po-info-chip" title="Estimated number of long-rest cycles before water is depleted"><span>Water Cycles</span><strong>{{operations.resources.summary.waterCyclesLeft}}</strong></div>
            <div class="po-info-chip" title="Inventory bindings linked to owned player-character items"><span>Bindings</span><strong>{{operations.resources.summary.selectedBindingCount}} / 3</strong></div>
          </div>
        </div>

        {{#if operationsPagePlanning}}

        <nav class="po-tabs po-tabs-sub po-planning-tabs" role="tablist" aria-label="Planning Sections">
          <button type="button" class="po-tab {{#if operationsPlanningRoles}}is-active{{/if}}" data-action="operations-planning-tab" data-planning-tab="roles" title="Assign operational leadership roles">Roles</button>
          <button type="button" class="po-tab {{#if operationsPlanningSops}}is-active{{/if}}" data-action="operations-planning-tab" data-planning-tab="sops" title="Enable and maintain SOP coverage">SOPs</button>
          <button type="button" class="po-tab {{#if operationsPlanningResources}}is-active{{/if}}" data-action="operations-planning-tab" data-planning-tab="resources" title="Track supplies, drains, and inventory bindings">Resources</button>
          <button type="button" class="po-tab {{#if operationsPlanningBonuses}}is-active{{/if}}" data-action="operations-planning-tab" data-planning-tab="bonuses" title="Review Party Health global modifiers for player actors">Party Health</button>
        </nav>

        {{#if operationsPlanningRoles}}

        <div class="po-gm-section">
          <div class="po-section-title">Operations Roles</div>
          <div class="po-hint">Assign leads for logistics, readiness, and accountability.</div>
          {{#each operations.roles}}
          <div class="po-op-role-row" data-role="{{key}}" title="{{hint}}">
            <div class="po-op-role-head">
              <div class="po-op-role-name">{{label}}</div>
              <div class="po-op-role-status {{#if hasActor}}is-ready{{else}}is-missing{{/if}}">{{actorName}}</div>
            </div>
            <select class="po-select" data-action="set-role" data-role="{{key}}" title="Assign an actor to {{label}}">
              <option value="">Unassigned</option>
              {{#each actorOptions}}
              <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
              {{/each}}
            </select>
            <button type="button" class="po-btn po-btn-sm" data-action="clear-role" data-role="{{key}}" title="Clear {{label}} assignment">Clear</button>
            <div class="po-op-role-meta">Bonus: {{bonus}} - Neglect: {{penalty}}</div>
          </div>
          {{/each}}
        </div>
        {{/if}}

        {{#if operationsPlanningSops}}
        <div class="po-gm-section">
          <div class="po-section-title">SOP Status</div>
          <div class="po-hint">Toggle procedures currently briefed and active.</div>
          {{#each operations.sops}}
          <div class="po-op-role-row">
            <label class="po-switch" title="Enable or disable SOP: {{label}}">
              <input type="checkbox" data-action="toggle-sop" data-sop="{{key}}" {{#if active}}checked{{/if}} />
              <span>{{label}}</span>
            </label>
            <details class="po-sop-note-block">
              <summary>Notes</summary>
              <textarea class="po-input" rows="4" data-action="set-sop-note" data-sop="{{key}}" placeholder="Player notes for {{label}}">{{note}}</textarea>
            </details>
          </div>
          {{/each}}
        </div>
        {{/if}}

        {{#if operationsPlanningResources}}
        <div class="po-gm-section">
          <div class="po-section-title">Resources</div>
          <div class="po-hint">Track supplies and configure per-day drain multipliers using calendar day progression.</div>
          <div class="po-info-strip">
            <div class="po-info-chip" title="Projected food consumed per day"><span>Per Day Food</span><strong>{{operations.resources.summary.foodDrainPerDay}}</strong></div>
            <div class="po-info-chip" title="Steward-managed food ration pool used first for food upkeep"><span>Food Rations</span><strong>{{operations.resources.partyFoodRations}}</strong></div>
            <div class="po-info-chip" title="Estimated cycles the food ration pool alone can support"><span>Food Ration Cycles</span><strong>{{operations.resources.summary.foodRationCyclesLeft}}</strong></div>
            <div class="po-info-chip" title="Projected water consumed per day"><span>Per Day Water</span><strong>{{operations.resources.summary.waterDrainPerDay}}</strong></div>
            <div class="po-info-chip" title="Steward-managed water ration pool used first for water upkeep"><span>Water Rations</span><strong>{{operations.resources.partyWaterRations}}</strong></div>
            <div class="po-info-chip" title="Estimated cycles the water ration pool alone can support"><span>Water Ration Cycles</span><strong>{{operations.resources.summary.waterRationCyclesLeft}}</strong></div>
            <div class="po-info-chip" title="Projected torches consumed per day"><span>Per Day Torches</span><strong>{{operations.resources.summary.torchDrainPerDay}}</strong></div>
          </div>
          <div class="po-info-strip">
            <div class="po-info-chip" title="Calendar days elapsed since last upkeep application"><span>Pending Days</span><strong>{{operations.resources.summary.upkeepDaysPending}}</strong></div>
            <div class="po-info-chip" title="Food expected to be deducted when daily upkeep is applied"><span>Pending Food</span><strong>{{operations.resources.summary.foodDrainPending}}</strong></div>
            <div class="po-info-chip" title="Water expected to be deducted when daily upkeep is applied"><span>Pending Water</span><strong>{{operations.resources.summary.waterDrainPending}}</strong></div>
          </div>
          <div class="po-op-summary {{#if operations.resources.gatherFoodCoveredNextUpkeep}}is-good{{else}}is-warn{{/if}}" title="Successful gather checks can reduce next upkeep consumption by target type.">
            Next Upkeep Coverage - Food: {{#if operations.resources.gatherFoodCoveredNextUpkeep}}Active{{else}}Inactive{{/if}} - Water: {{#if operations.resources.gatherWaterCoveredNextUpkeep}}Active{{else}}Inactive{{/if}}
          </div>
          <div class="po-hint">Steward flow: keep <strong>Food Rations</strong>, <strong>Water Rations</strong>, and linked food/water inventory updated; food deductions use rations plus the targeted food item only.</div>
          <label class="po-resource-row">
            <span>Food Rations (Steward Pool)</span>
            <input type="number" min="0" class="po-input" data-action="set-resource" data-resource="partyFoodRations" value="{{operations.resources.partyFoodRations}}" />
          </label>
          <label class="po-resource-row">
            <span>Water Rations (Steward Pool)</span>
            <input type="number" min="0" class="po-input" data-action="set-resource" data-resource="partyWaterRations" value="{{operations.resources.partyWaterRations}}" />
          </label>
          <label class="po-resource-row">
            <span>Torches</span>
            <input type="number" min="0" class="po-input" data-action="set-resource" data-resource="torches" value="{{operations.resources.torches}}" />
          </label>
          <div class="po-resource-config-panel">
            <div class="po-section-title">Resource Targets</div>
            <label class="po-resource-row">
              <span>Food Owner</span>
              <select class="po-select" data-action="set-resource" data-resource="itemSelectionActor:food">
                {{#each operations.resources.itemSelections.food.actorOptions}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                {{/each}}
              </select>
            </label>
            <label class="po-resource-row">
              <span>Food Inventory Item</span>
              <select class="po-select" data-action="set-resource" data-resource="itemSelectionItem:food" {{#unless operations.resources.itemSelections.food.hasActor}}disabled{{/unless}}>
                {{#each operations.resources.itemSelections.food.itemOptions}}
                <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                {{/each}}
              </select>
            </label>
            <label class="po-resource-row">
              <span>Water Owner</span>
